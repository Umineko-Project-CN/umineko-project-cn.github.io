---
interface Props {
  src: string;
}

const { src } = Astro.props;
let content = "";

try {
  const response = await fetch(src);
  if (response.ok) {
    content = await response.text();
  } else {
    content = `无法加载内容 (Status: ${response.status})`;
  }
} catch (error) {
  content = `加载失败: ${error instanceof Error ? error.message : String(error)}`;
}
---

<div class="whitespace-pre-wrap">{content}</div>